<Window x:Class="AppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppClient"
        mc:Ignorable="d"
        Title="ClientApp" Height="415" Width="600" MaxHeight="415" MinHeight="415" MaxWidth="600" MinWidth="600">
    <Grid>
        <Canvas>
            <Label Width="200" Height="50" Content="Enter Name" HorizontalContentAlignment="Center" FontSize="25" FontWeight="Medium" Background="Gray" Foreground="White"></Label>
            <TextBox x:Name="clientNameTxt" Canvas.Left="205" FontSize="30" FontWeight="Medium" Width="370" Height="50"></TextBox>
            <Button Click="ConnectButton_Click" Content="Connect" Canvas.Top="60" Width="600" FontSize="30" FontWeight="Bold" Background="Gray" Foreground="White"></Button>
            <ListBox FontSize="20" FontWeight="Medium" x:Name="messageListBox" Canvas.Top="110" Width="560" Margin="10" Height="250"></ListBox>
        </Canvas>
    </Grid>
</Window>
